{# templates/security/login.html.twig #}
{% extends 'index.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h4 text-center">Logowanie</h1>
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger">Zły login lub hasło</div>
                        {% endif %}

                        <form method="post">
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" name="_username" id="email" class="form-control" value="{{ last_username }}" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="password">Hasło:</label>
                                <input type="password" name="_password" id="password" class="form-control" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary w-100">Zaloguj się</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        Nie masz konta? <a href="{{ path('register') }}" class="text-decoration-none">Zarejestruj się</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
