{# templates/dish/index.html.twig #}

{% extends 'base.html.twig' %}
{% block body %}
    <div class="header-bar d-flex justify-content-between align-items-center">
        <span></span>
        <a href="{{ path('dish_new') }}" class="btn custom-btn">Dodaj Przepis</a>
    </div>
    <h1>Twoje przepisy</h1>
    <hr/>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        {% for dish in dishes %}
            <div class="col mb-4">
                <a href="{{ path('dish_show', {id: dish.id}) }}" class="text-decoration-none text-dark">
                    <div class="card recipe-card">
                        <img src="{% if dish.image %}{{ asset(dish.image) }}{% else %}{{ asset('images/dish-1295066_1280.png') }}{% endif %}" class="card-img-top" alt="Recipe Image">
                        <div class="card-body">
                            <h5 class="card-title">{{ dish.name }}</h5>
                            <p class="card-text">
                                {% if dish.description %}
                                    {% if dish.description|length > 27 %}
                                        {{ dish.description|slice(0, 27) ~ '...' }}
                                    {% else %}
                                        {{ dish.description }}
                                    {% endif %}
                                {% else %}
                                    <br>
                                {% endif %}
                            </p>
                            <table class="table macros-table">
                                <tbody>
                                <tr>
                                    <th scope="row">Kalorie:</th>
                                    <td>{{ dish.macros.calories }} kcal</td>
                                </tr>
                                <tr>
                                    <th scope="row">Białko:</th>
                                    <td>{{ dish.macros.protein }} g</td>
                                </tr>
                                <tr>
                                    <th scope="row">Węglowodany:</th>
                                    <td>{{ dish.macros.carbs }} g</td>
                                </tr>
                                <tr>
                                    <th scope="row">Tłuszcze:</th>
                                    <td>{{ dish.macros.fat }} g</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="overlay">Wyświetl przepis</div>
                    </div>
                </a>
            </div>
        {% endfor %}

        {% set remaining = 4 - (dishes|length % 4) %}
        {% if remaining < 4 %}
            {% for i in 1..remaining %}
                <div class="col mb-4"></div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
