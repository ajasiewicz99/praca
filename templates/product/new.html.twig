{# templates/product/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dodaj nowy produkt{% endblock %}

{% block body %}
    <h1>Dodaj nowy produkt</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    <div class="form-group">
        {{ form_label(form.name, 'Nazwa', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.description, 'Opis', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.image, 'Zdjęcie', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.calories, 'Kalorie', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.calories, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.protein, 'Białko', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.protein, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.carbs, 'Węglowodany', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.carbs, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.fat, 'Tłuszcze', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.fat, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Dodaj produkt</button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
